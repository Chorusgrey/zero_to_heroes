<% @hero_photo_url = cl_image_path(@hero.photos.first.key) %>
<div class="body">
  <div class="container-fluid py-5">
    <div class="row">
      <div class="col-sm-6 bg-white rounded text-center">
        <div class="card-category" style="background-image: linear-gradient(rgba(500, 500, 500,0.1), rgba(500, 500, 500,0.1)), url('<%= @hero_photo_url %>')"><%= @hero.name %></div>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(500, 500, 500,0.1), rgba(500, 500, 500,0.1)), url('<%= @hero_photo_url %>')"></div>
          <div class="card-category" style="background-image: linear-gradient(rgba(500, 500, 500,0.1), rgba(500, 500, 500,0.1)), url('<%= @hero_photo_url %>')"></div>
          <div class="card-category" style="background-image: linear-gradient(rgba(500, 500, 500,0.1), rgba(500, 500, 500,0.1)), url('<%= @hero_photo_url %>')"></div>
        </div>
      </div>

      <div class="col-sm-6 bg-white rounded text-center">
        <div class="calendar">
          <h5 class="fw-bold">Louer votre Super Héro</h5>
          <form>
            <label for="start_date">De</label>
            <input type="date" id="start_date" name="start_date">
            <label for="end_date">A</label>
            <input type="date" id="end_date" name="end_date">
            <label for="price" class="fw-bold">Total: <%= @hero.price_per_day %>EUR</label>
            <input type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid py-5">
    <div class="row">
      <div class="col-sm-6 bg-white rounded text-center mt-4">
        <h5 class="fw-bold">Une description du hero</h5>
          <p><%= @hero.description %></p>
          <p>Prix par jour: <%= @hero.price_per_day %>EUR</p>
      </div>

      <div class="col-sm-6 bg-white rounded text-center">
        <h3 class="fw-bold">Où est ton super hero ?</h3>
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12617.299263255424!2d-122.40772276869687!3d37.783892450848045!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80858094c8df1279%3A0x69f30715b5e7e35!2sGolden%20Gate%20Bridge!5e0!3m2!1sen!2sus!4v1645086254569!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </div>
</div>
