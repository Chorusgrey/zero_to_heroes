<div style="margin-top: 80px;">
<div class="container">


<div class="card-dashboard">
  <div class="dashboard-top">
    <div class="avatar-dashboard">
      <%= image_tag @current_user.photo.url, class: "rounded-circle" %>
    </div>
    <div>
      <h1 class="welcome">Bienvenue <%= @current_user.first_name %> </h1>
      <%# <p class="text-dashboard">Lorem ipsum dolor sit amet consectetur adipisicing elit. Commodi voluptates consequatur cum doloremque neque harum non alias! Aliquid culpa repellendus ducimus, ullam facilis saepe magnam, id laborum, voluptas fuga ratione.</p> %>
    </div>
  </div>
  <div class="litle-case">
    Nombre de réservation : <%= @bookings_as_owner.count %>
  </div>
</div>

<h3>Location de super héros en cours</h3>
  <% @bookings_as_tenant.each do |booking| %>
    <%= cl_image_tag(booking.hero.photos.first&.key, class:"movie-image") %>
    <h5><%= booking.hero.name %></h5>
    <p><%= booking.hero.description %></p>
    <p><small class="text-muted"> Prix total : <strong class="price"><%= booking.total_price %> €</strong></small></p>
  <% end %>




<h3>Mes super héros que je propose à louer</h3>
  <% @heros_for_rent.each do |hero| %>
    <%= cl_image_tag(hero.photos.first&.key, class:"movie-image") %>
    <h5><%= hero.name %></h5>
    <p><%= hero.description %></p>
    <p><small class="text-muted"> Prix par jour : <strong class="price"><%= hero.price_per_day %> €</strong></small></p>
  <% end %>


  </div>
</div>
