
  <div class="banner mb-3" style="background-color: #007DA6;">
    <h1>Votre Super Héro favoris</h1>
    <h1>à côté de chez vous !</h1>
    <p class="formulaire"><%= form_with model: @heroe do |f| %>
  <% f.label :address %>
  <%= f.text_field :address, placeholder: "Votre ville" %>
  <%= f.submit class: "button" %>
<% end %></p>
  </div>


  <div class="container">
      <div class="cards">
          <% @heroes.each do |heroe| %>
          <div class="card">
          <div class="heroes-cards"><%= cl_image_tag "iron_man", alt: "#{heroe.name}", width: 300, height: 200, crop: :auto_pad %>
            <div><p class="h2"><%= heroe.name %></p><br>
            <p class="fs-6"><%= heroe.description %></p>
            <button class="button">Montrer</button>
              </div>
              </div>
            </div>
        <% end %>
        </div>
    </div>
</div>
