
  <div class="banner mb-3" style="background-color: #007DA6;">
    <h1>Votre Super Héro favori</h1>
    <h1>à côté de chez vous !</h1>
    <p class="formulaire"><%= form_with model: @hero do |f| %>
  <% f.label :address %>
  <%= f.text_field :address, placeholder: "Votre ville" %>
  <%= f.submit class: "button" %>
<% end %></p>
  </div>
  <div class="container">
      <div class="cards">
          <% @heros.sample(3).each do |hero| %>
          <div class="card">
          <%= hero.photos.attached? ? cl_image_tag(hero.photos.first&.key, alt: "#{hero.name}", class:"movie-image") : image_tag("superhero.jpg")%>
            <div class="text"><p class="h2"><%= hero.name %></p><br>
            <p class="fs-6 p-3"><%= hero.description %></p>
              </div>
              <button class="button"><% link_to hero.name, hero_path(hero)%>Montrer</button>
            </div>
        <% end %>
        </div>
    </div>
</div>
